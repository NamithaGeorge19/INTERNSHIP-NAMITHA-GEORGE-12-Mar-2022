<h3>{{viewTitle}}</h3>

<form action="/class" method="post" autocomplete="off">
    <input type="hidden" name="_id" value="{{classDetail._id}}">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Standard</label>
            <input type="text" class="form-control" name="standard" placeholder="Standard"
                value="{{classDetail.standard}}">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Division</label>
            <input type="text" class="form-control" name="division" placeholder="Division"
                value="{{classDetail.division}}">
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/class/classList" class="btn btn-info">View All</a>
    </div>
</form>