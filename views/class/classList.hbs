<h3><a class="btn btn-secondary" href="/class">Create New</a> Class List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Standard</th>
            <th>Division</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.standard}}</td>
            <td>{{this.division}}</td>

            <td>
                <a href="/class/{{this._id}}" class="btn btn-sm btn-primary">Edit</a>
                <a href="/class/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record?');"
                    class="btn btn-sm btn-primary">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>